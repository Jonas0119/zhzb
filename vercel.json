{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json", 
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "buildCommand": "npm run build", 
        "installCommand": "npm install"  
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build", 
        "installCommand": "npm install"  
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/main.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}